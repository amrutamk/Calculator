<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_marginBottom="1pt"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:ems="10"
        android:background="@color/white"
        android:layout_weight="1"
        android:gravity="center|right"
        android:textSize="40pt"
        android:inputType="textPersonName"
        android:text="0"
        android:paddingRight="30dp"
        android:layout_gravity="end"
        />



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">


            <Button
                android:id="@+id/buAC"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="1pt"
                android:textColor="@color/white"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_700"
                tools:ignore="OnClick">

            </Button>
            <Button
                android:id="@+id/buPlusMinus"
                android:text="+/-"
                android:layout_marginTop="1pt"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:textColor="@color/white"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_700">
            </Button>

            <Button
                android:id="@+id/buPercent"
                android:text="%"
                android:layout_marginTop="1pt"
                android:onClick="percentEvent"
                android:layout_marginRight="1pt"
                android:textColor="@color/white"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_700">
            </Button>




            <Button
                android:id="@+id/buDivide"
                android:text="/"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:textColor="@color/white"
                android:onClick="operatorEvent"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_700">

            </Button>
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu7"
                android:text="7"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/bu8"
                android:text="8"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/bu9"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/buMultiply"
                android:text="*"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:onClick="operatorEvent"
                android:textColor="@color/white"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_700">

            </Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bU4"
                android:text="4"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/bu5"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/bu6"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/buSubstraction"
                android:text="-"
                android:layout_marginRight="1pt"
                android:onClick="operatorEvent"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@color/purple_700">

            </Button>
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bU1"
                android:text="1"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/bu2"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/bu3"
                android:text="3"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/buAddition"
                android:text="+"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:textColor="@color/white"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_700">

            </Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5pt">

            <Button
                android:id="@+id/bu00"
                android:text="00"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/bu0"
                android:text="0"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/buDot"
                android:onClick="numberEvent"
                android:text="."
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback">

            </Button>

            <Button
                android:id="@+id/buEqual"
                android:onClick="equlEvent"
                android:text="="
                android:layout_marginRight="1pt"
                android:textColor="@color/white"
                android:layout_marginTop="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_700">

            </Button>
        </TableRow>
    </TableLayout>



    </LinearLayout>


